{
  "name": "scryfall-card-list",
  "version": "1.0.0",
  "description": "Query Scryfall API to search for MTG cards and export to CSV/Excel",
  "category": "data",
  "tags": ["mtg", "magic-the-gathering", "scryfall", "api", "csv", "excel", "export"],
  "author": "Claude Skills",
  "requirements": [
    "requests>=2.31.0",
    "openpyxl>=3.1.0"
  ],
  "api": {
    "base_url": "https://api.scryfall.com",
    "rate_limit_ms": 100,
    "endpoints": {
      "search": "/cards/search",
      "named": "/cards/named",
      "autocomplete": "/cards/autocomplete",
      "collection": "/cards/collection"
    }
  },
  "default_settings": {
    "export_format": "csv",
    "sort_order": "name",
    "sort_direction": "auto",
    "unique_strategy": "cards",
    "include_extras": false,
    "default_fields": [
      "name",
      "set",
      "set_name",
      "rarity",
      "type_line",
      "mana_cost",
      "cmc"
    ]
  },
  "field_presets": {
    "basic": [
      "name",
      "set",
      "rarity",
      "type_line",
      "mana_cost"
    ],
    "creatures": [
      "name",
      "set",
      "type_line",
      "mana_cost",
      "power",
      "toughness",
      "rarity"
    ],
    "prices": [
      "name",
      "set",
      "rarity",
      "prices.usd",
      "prices.usd_foil",
      "prices.eur",
      "prices.tix"
    ],
    "commander": [
      "name",
      "type_line",
      "color_identity",
      "cmc",
      "rarity",
      "edhrec_rank",
      "prices.usd"
    ],
    "collection": [
      "name",
      "set_name",
      "set",
      "collector_number",
      "rarity",
      "artist",
      "released_at"
    ],
    "comprehensive": [
      "name",
      "mana_cost",
      "cmc",
      "type_line",
      "oracle_text",
      "power",
      "toughness",
      "colors",
      "color_identity",
      "set",
      "set_name",
      "rarity",
      "artist",
      "prices.usd",
      "legalities.standard",
      "legalities.commander",
      "scryfall_uri"
    ]
  },
  "examples": {
    "simple_search": {
      "description": "Search for red legendary creatures",
      "query": "c:red t:legendary t:creature",
      "preset": "creatures"
    },
    "price_check": {
      "description": "Get prices for all cards in a set",
      "query": "set:mom",
      "preset": "prices"
    },
    "commander_staples": {
      "description": "Find popular commander cards under $5",
      "query": "f:commander prices.usd<5 edhrec:<=1000",
      "preset": "commander"
    },
    "standard_playable": {
      "description": "Export all Standard-legal blue instants",
      "query": "c:blue t:instant f:standard",
      "preset": "basic"
    }
  }
}
